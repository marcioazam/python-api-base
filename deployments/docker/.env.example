# =============================================================================
# Environment Configuration Template
# =============================================================================
# Copy to .env and customize for your environment
# =============================================================================

# Environment
ENVIRONMENT=development

# API Configuration
API_PORT=8000
LOG_LEVEL=INFO
LOG_FORMAT=json

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/python_api
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=python_api
POSTGRES_PORT=5432

# Security (CHANGE IN PRODUCTION!)
SECURITY_SECRET_KEY=development-secret-key-change-in-production-min-32-chars
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Redis
REDIS_PORT=6379

# Observability
OTEL_ENABLED=false
OTEL_ENDPOINT=http://otel-collector:4317

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
GRAFANA_ROOT_URL=http://localhost:3000

# RabbitMQ
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# MinIO
MINIO_USER=minioadmin
MINIO_PASSWORD=minioadmin

# Keycloak
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# Docker Registry (for production)
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE=your-org/python-api-base
DOCKER_TAG=latest
